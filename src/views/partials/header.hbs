<header class="navbar">
    <nav>
        <div class="logo">
            <h4><a href="/">Bounty Hunter</a></h4>
        </div>
        <ul class="nav-links">
            {{#unless signedIn}}
            <li>
                <a class="headerLink" href="/">Home</a>
            </li>
            <li>
                <a class="headerLink" href="/login">Login</a>
            </li>
            <li>
                <a class="headerLink" href="/register">Register</a>
            </li>
            {{else}}
            <li>
                <a >Signed in as: <span class="headerUsername">{{username}}</span></a>
            </li>
            <li>
                <a class="headerLink" href="/">Home</a>
            </li>
            {{#if admin}}
            <li>
                <a class="headerLink"  href="/addbounty">Add Bounty</a>
            </li>
            {{/if}}
            <li>
                <a class="headerLink"  href="/logout">Logout</a>
            </li>
            {{/unless}}
        </ul>
        <div class="burger">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
    </nav>
    <script>
        const navSlide = () => {
            const burger = document.querySelector('.burger')
            const nav = document.querySelector('.nav-links')
            const navLinks = document.querySelectorAll('.navlinks li')
            //toggle nav
            burger.addEventListener('click', () => {
                nav.classList.toggle('nav-active')
                burger.classList.toggle('toggle')
            })
        }
        navSlide();
    </script>
</header>