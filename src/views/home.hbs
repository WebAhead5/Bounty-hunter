<section class="user-info">
    {{#if signedIn}}
    <section class="bounties">
        <div class="bounties-list">
            {{#each bounties}}
            <div class="each-bounty">
                <p>WANTED</p>
            <img src="{{this.picture}}" alt="bounty photo">
            <ul>
                <li> {{this.name}} </li>
                <li> {{this.crimes}} </li>
                <li> {{this.status}} </li>
                <li> {{this.bounty}} </li>
                <li> {{this.furtherinfo}} </li>
            </ul>
            <a href="/bounty/{{this.id}}">Click here for more detail</a>
            </div>
            <div>
                {{#if ../admin}}
            <form action="/deletebounty/{{this.id}}" method="post">
                <button>Delete</button>
            </form>
            {{/if}}
            </div>
            {{/each}}
        </div>
    </section>
    <br>
    {{else}}
    {{> welcome}}
    <h1>You are logged out</h1>
    {{/if}}
</section>